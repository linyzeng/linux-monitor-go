#!/bin/bash

if [[ -z $GOPATH ]] ; then
	echo "$(basename $0): GOPATH was not set!"
	exit 1
fi
if (( $# <= 0 )) ; then
	echo "syntax: $(basename $0) plugin-name flags"
	exit 0
else
	_plugin=$1
	shift
	${GOPATH}/bin/$_plugin	\
		-config ${GOPATH}/src/github.com/my10c/nagios-plugins-go/etc/nagios-plugins.yaml $*
	exit $?
fi
